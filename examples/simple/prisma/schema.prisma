datasource db {
    provider = "sqlite"
    url      = "file:../dev.db"
}

generator client {
    provider      = "cargo prisma"
    binaryTargets = ["native"]
    output        = "../src/db.rs"
}

model User {
    id          String  @id
    displayName String

    profileId String? @unique
    profile   Profile?

    posts Post[]
}

model Post {
    id      String @id
    content String

    user   User   @relation(fields: [userId], references: [id])
    userId String
}

model Profile {
    id String @id

    user   User   @relation(fields: [userId], references: [id])
    userId String @unique
}
